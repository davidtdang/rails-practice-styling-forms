<%= form_for @person, html: {class: "form-horizontal"} do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation" class="alert alert-danger col-sm-offset-2" role="alert">
      <h4><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h4>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-horizontal">
<div class="container">

