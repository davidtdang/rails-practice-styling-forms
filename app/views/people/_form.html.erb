  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label"%>
    <div class="form-group col-sm-5">
    <%= f.text_field :first_name, class:"form-control", id:"first_name" %>
  </div>
</div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label"%>
    <div class="form-group col-sm-5">
    <%= f.text_field :last_name, class:"form-control", id:"last_name" %>
  </div>
</div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: "col-sm-2 control-label"%>
    <div class="form-group col-sm-2">
    <%= f.date_field :date_of_birth, class:"form-control", id:"first_name" %>
  </div>
</div>
  <div class="form-group">
    <%= f.label :bio, class:"control-label col-sm-2"%>
    <div class="form-group col-sm-5">
    <%= f.text_area :bio, class:"form-control", id:"first_name" %>
  </div>
  </div>
</div>
