    </div>
  </div>
  <br>

  <div class="actions">
    <div class="form-group">
      <div class="col-md-4 col-lg-offset-2">
    <%= f.submit "Create Person", class:"btn btn-info" %>
    <%= link_to "Cancel", new_person_path, class: "btn btn-default"%>
  </div>


</div>
</div>
</div>
